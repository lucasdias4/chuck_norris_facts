<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pesentation.EmptySearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/message_empty_search_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/message_margin_start_empty_search_fragment"
            android:layout_marginEnd="@dimen/message_margin_end_empty_search_fragment"
            android:layout_marginTop="@dimen/message_margin_top_empty_search_fragment"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/message_empty_search_fragment"
            android:textColor="@color/emperor"
            android:textSize="@dimen/message_text_size_empty_search_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/picture_empty_search_fragment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/picture_layout_height_empty_search_fragment"
            android:layout_marginTop="@dimen/picture_margin_top_empty_search_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_empty_search_fragment"
            app:srcCompat="@drawable/ic_empty_search" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>